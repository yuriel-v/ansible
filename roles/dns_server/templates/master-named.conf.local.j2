// Primary zone
zone "{{ dns_server_zone }}" IN {
  type master;
  file "/etc/bind/db.{{ dns_server_zone }}";
};

// Reverse zone
zone "{{ dns_server_ptr_zone }}" IN {
  type master;
  file "/etc/bind/reverse/reverse.{{ dns_server_zone }}";
};